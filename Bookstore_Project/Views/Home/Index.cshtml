@{
}

@model BooksViewModel


<h1 class="m-5">Tanner's Mock Bookstore</h1>

@foreach (Book b in Model.Books)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h3 class="display-1">@b.Title</h3>
        <h4 class="display-2">By @b.Author</h4>
        <ul class="list-unstyled">
            <li>Category: @b.Category</li>
            <li>Genre: @b.Classification</li>
            <li>@b.PageCount Pages</li>
            <li>Price: $@b.Price</li>
            <li>ISBN: @b.Isbn</li>
        </ul>
        <h5 class="display-6">Published by @b.Publisher</h5>
    </div>
</div>
}

